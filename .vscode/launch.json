    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jasmine Tests",
            "program": "${workspaceFolder}/node_modules/jasmine/bin/jasmine.js",
            "args": [
                "--filter=./test/**/test-*.js"
            ],
            "cwd": "${workspaceFolder}",
            "sourceMaps": true,
            "preLaunchTask": "buildAll",
            "internalConsoleOptions": "openOnSessionStart",
            "protocol": "inspector"
        }
    ]
}